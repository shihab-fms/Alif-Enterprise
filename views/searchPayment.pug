extends base

block content 

  .form.form--table
    .col-sm.d-flex.justify-content-center
      .form--search__payment.form--view
        h2.text-center.form-text
          | Payment: view Payment history....
        br.bg-gradient
        .row  
          .col-6
            .input-group.input-group-sm.mb-3
              .input-group-prepend
                span#inputGroup-sizing-sm.input-group-text Search 
              input.form-control.myInput(type='text' aria-label='Search' aria-describedby='inputGroup-sizing-sm')

        .container-fluid
          .row.payment--view--header.view--header
            .col-1.p-0
              label.mb-0.m-1.form-label.text-wrap SL No#
            .col-2.p-0
              label.mb-0.m-1.form-label.text-wrap Date
            .col-4.p-0
              label.mb-0.form-label.text-wrap Branch Name
            .col-2.p-0
              label.mb-0.form-label.text-wrap Amount Tk.
            .col.p-0
              label.mb-0.form-label.text-wrap Action
          // Body
          .myperent
            each pay in payments
              .row.payment--view--Data.view--data(data-paymentid=`${pay._id}`)
                .col-1.p-0
                  label#sl.mb-0.p-1.form-label.text-wrap=payments.indexOf(pay) + 1
                .col-2.p-0
                  label#date.mb-0.form-label.text-wrap=pay.date
                .col-4.p-0
                  label#branch.mb-0.form-label.text-wrap(data-branchid=`${pay.branch._id}`)=pay.branch.name
                .col-2.p-0
                  label#amount.mb-0.form-label.text-wrap=`${pay.summeryAmount} Tk.`
                .col.p-0
                  a.btn.btn-edit.btn-info.btn-sm Edit
                  a.btn.btn-print.btn-primary.btn-sm Print
                  a.btn.btn-delete.btn-dark.btn-sm Delete